{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "automerge": true,
  "autoApprove": true,
  "dependencyDashboardApproval": false,
  "patch": {
    "autoApprove": true,
    "automerge": true
  },
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "constraints": {
    "go": "1.25"
  },
  "ignoreTests": true
}
